    <div class="space-y-4">
        <!-- Email field -->
        <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                @if (SelectedRole == CustomModel.Role.User)
                {
                    <text>Email address</text>
                }
                else
                {
                    <text>Business email</text>
                }
            </label>
            <input type="email"
            id="email" autocomplete="off"
            class="w-full px-3 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all duration-200"
