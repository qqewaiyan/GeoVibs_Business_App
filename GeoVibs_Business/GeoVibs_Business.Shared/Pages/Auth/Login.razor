                    {
                        <EyeCloseIcon Width="20" Height="20"></EyeCloseIcon>
                    }
                    else
                    {
                        <EyeIcon Width="20" Height="20"></EyeIcon>
                    }
                </button>
            </div>
            @if (!string.IsNullOrWhiteSpace(errMsg["errPassword"]))
            {
                <label class="text-sm text-red-700">@errMsg["errPassword"]</label>
            }
        </div>

