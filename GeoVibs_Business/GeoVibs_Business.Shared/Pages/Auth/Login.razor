            @bind="@LoginDTO.Email">
            @if(!string.IsNullOrWhiteSpace(errMsg["errEmail"]))
            {
                <label class="text-sm text-red-700">@errMsg["errEmail"]</label>
            }
        </div>

        <!-- Password field -->
        <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
            <div class="relative">
